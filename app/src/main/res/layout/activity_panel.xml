<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panel">

    <Button
        android:id="@+id/reset_pwd_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Resetuj hasÅ‚o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="Wyloguj"
        app:layout_constraintEnd_toEndOf="@+id/reset_pwd_button"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/reset_pwd_button"
        app:layout_constraintTop_toBottomOf="@+id/reset_pwd_button" />

    <TextView
        android:id="@+id/rfid_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rfid"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Button
        android:id="@+id/timestamp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz godziny"
        app:layout_constraintBottom_toTopOf="@+id/logout_button"
        app:layout_constraintEnd_toEndOf="@+id/reset_pwd_button"
        app:layout_constraintStart_toStartOf="@+id/reset_pwd_button"
        app:layout_constraintTop_toBottomOf="@+id/reset_pwd_button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RFID:"
        app:layout_constraintBottom_toTopOf="@+id/reset_pwd_button"
        app:layout_constraintEnd_toStartOf="@+id/reset_pwd_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>